<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarTabStyle">@style/ActionBar.Solid.Counters</item>
        <item name="actionBarSize">60dip</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/blueback</item>
    </style>

    <style name="CountersTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Counters</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Counters" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <style name="ButtonPlusStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:background">@drawable/button_plus_background</item>
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@anim/fab_elevation</item>
    </style>

    <style name="ButtonMinusStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:background">@drawable/button_minus_background</item>
        <item name="android:src">@drawable/minus_counter_icon</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@anim/fab_elevation</item>
    </style>

</resources>
